{
  "name": "netflix-subtitle-downloader-ts",
  "version": "1.0.0",
  "description": "Download subtitles from Netflix episodes and movies - TypeScript version",
  "main": "dist/popup.js",
  "scripts": {
    "build:staging": "SMART_SUBS_ENV=development webpack --mode=production",
    "build:production": "SMART_SUBS_ENV=production webpack --mode=production",
    "dev": "webpack --mode=development --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": [
    "netflix",
    "subtitles",
    "chrome-extension",
    "typescript"
  ],

{
  "manifest_version": 3,
  "name": "Subly",
  "description": "Intelligent bilingual subtitles for Netflix language learning.",
  "version": "1.0.1",
  "icons": {
    "128": "icon128.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://www.netflix.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Subly - Smart Netflix Subtitles"
  },
  "content_scripts": [
    {
      "matches": ["*://www.netflix.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["page-script.js"],
      "matches": ["*://www.netflix.com/*"]
    }
  ]
}

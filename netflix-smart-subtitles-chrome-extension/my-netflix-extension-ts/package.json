    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "copy-webpack-plugin": "^11.0.0",
    "dotenv-webpack": "^8.1.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "vite": "^7.1.9",
    "vite-plugin-static-copy": "^3.1.3",
    "vite-plugin-web-extension": "^4.4.5",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
